<div class="col s12 m6 product-card">
  <div class="card ">
    <div class="card-image">
      <img src={{product.image}} alt="{{product.name}}"/>
    </div>
    <div class="card-content">
      <span class="card-title">{{product.name}}</span>
      <p>Rating: <strong>{{product.rating}}</strong></p>
      <p>Price: <strong>{{product.priceWithCurrency}}</strong></p>
      <p>{{product.description}}</p>
    </div>
    <div class="card-action">
      {{#liquid-if isInCart class="in-cart"}}
        <button class="btn" {{action "removeFromCart"}}>Remove from Cart</button>
      {{else}}
        <button class="btn" {{action "addToCart"}}>Add to Cart</button>
      {{/liquid-if}}
    </div>
  </div>
</div>
